{
  "compilerOptions": {
      "target": "es5",
      "lib": ["es6", "es2022"],
      "module": "ESNext",
      "esModuleInterop": true,
      "moduleResolution": "node",
      "strict": true,
      "forceConsistentCasingInFileNames": true,
      "sourceMap": true,
      "outDir": "dist",
  },
  "exclude": ["test/*", "dist/*"],
  "lib": ["es2015"]
}
